<Application
    x:Class="StackOverflowNotifier.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StackOverflowNotifier"
    xmlns:viewModels="using:StackOverflowNotifier.UWP.Shared.ViewModels"
    RequestedTheme="Light">

    <Application.Resources>
        <viewModels:MainViewModel x:Key="MainViewModel" />

        <!--  Colors  -->
        <Color x:Key="StackOverflowOrange">#F37E22</Color>
        <Color x:Key="StackOverflowRed">#f26721</Color>
        <Color x:Key="StackOverflowGrey">#B9B9B9</Color>

        <!-- Color Brushes -->
        <SolidColorBrush x:Key="StackOverflowOrangeBrush" Color="{ThemeResource StackOverflowOrange}" />
        <SolidColorBrush x:Key="StackOverflowRedBrush" Color="{ThemeResource StackOverflowRed}" />
        <SolidColorBrush x:Key="StackOverflowGreyBrush" Color="{ThemeResource StackOverflowGrey}" />
    </Application.Resources>
</Application>
